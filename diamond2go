#!/usr/bin/env bash
# File: diamond2go (place in repo root or /usr/local/bin)
# Minimal wrapper to run the Perl core without typing "perl ..." or using .pl

set -euo pipefail

# Resolve repo root if this file is inside the repo; else assume installed
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CORE="${SCRIPT_DIR}/util/Diamond2go.pl"

if [[ ! -x "$CORE" && ! -f "$CORE" ]]; then
  echo "diamond2go: cannot find Diamond2go.pl at $CORE" >&2
  exit 1
fi

exec perl "$CORE" "$@"
